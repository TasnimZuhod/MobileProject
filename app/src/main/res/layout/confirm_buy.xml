<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity"
    android:paddingTop="60dp"
    android:background="@color/Background">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_background"
        android:id="@+id/itemImg">

        <ImageView
            android:id="@+id/confirmImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bag"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/confirmPriceLabel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="10$"
            android:background="@drawable/labels"
            android:textColor="#fff"
            android:textSize="18dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </FrameLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemImg">

        <Button
            android:id="@+id/ConvertBTN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="ConvertCurrecny"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/ConvertCurrency"
            android:textColor="@color/TextColor"
            app:layout_constraintRight_toLeftOf="parent" />

        <TextView
            android:id="@+id/convertedPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#e1e1e1"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="â‚ª"
            android:textAlignment="center"
            android:textColor="@color/TextColor"
            android:textSize="16dp"
            android:textStyle="bold" />
    </android.support.v7.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/ConfirmBTN"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/Confirm"
        android:textColor="#fff"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="OnConfirmButtonClick"
        android:background="@drawable/buttonshape"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>